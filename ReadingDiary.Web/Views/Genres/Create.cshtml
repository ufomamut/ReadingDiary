@model ReadingDiary.Web.Models.ViewModels.GenreViewModel

@{
    ViewData["Title"] = "Vytvořit žánr";
    ViewData["PageTitle"] = "Vytvořit žánr";
    ViewData["PageDescription"] = "Přidání nového žánru do systému.";
}

<div class="row justify-content-center">
    <div class="col-md-12 col-lg-8">

        <!-- HEADER -->
        @await Html.PartialAsync("_PageHeaderPartial")

        <form asp-action="Create" method="post">

            <div asp-validation-summary="ModelOnly"
                 class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- ACTIONS BUTTONS -->
            <div class="d-flex gap-2 mt-4">
                <button type="submit"
                        class="btn btn-primary">
                    Uložit
                </button>

                <a asp-action="Index"
                   class="btn btn-outline-secondary">
                    Zpět na seznam
                </a>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
