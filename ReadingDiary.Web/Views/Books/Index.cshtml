@model ReadingDiary.Web.Models.ViewModels.AdminBooksIndexViewModel

@{
    ViewData["Title"] = "Správa knih";
    ViewData["PageTitle"] = "Správa knih";
    ViewData["PageDescription"] = "Přehled a správa všech knih";
}

@await Html.PartialAsync("_PageHeaderPartial")

<section>

    <!-- FILTERS -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <form method="get" class="d-flex gap-2">
            <input type="text"
                   name="search"
                   class="form-control"
                   placeholder="Hledat název nebo autora…" />

            <select name="sort" class="form-select w-auto">
                <option value="">Nejnovější</option>
                <option value="title">Název (A–Z)</option>
            </select>

            <button class="btn btn-outline-primary">
                Hledat
            </button>
        </form>

        <a asp-action="Create" class="btn btn-primary">
            + Nová kniha
        </a>
    </div>

    <!-- BOOKS TABLE -->
    <table class="table table-sm align-middle table-hover">
        <thead class="table-light">
            <tr>
                <th style="width:70px;"></th>
                <th>Kniha</th>
                <th>Autor</th>
                <th>Vytvořeno</th>
                <th style="width:160px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Books)
            { 
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.CoverImagePath))
                        {
                            <img src="/BookCovers/@item.CoverImagePath"
                                 width="50"
                                 class="rounded border" />
                        }
                    </td>

                    <td class="fw-semibold">
                        @item.Title
                    </td>

                    <td>
                        @item.Author
                    </td>

                    <td>
                        @item.CreatedAtFormatted
                    </td>

                    <!-- ACTIONS BUTTONS-->
                    <td class="text-end">
                        <a asp-action="Edit"
                           asp-route-id="@item.Id"
                           class="btn btn-sm btn-outline-primary">
                            Edit
                        </a>

                        <button type="button"
                                class="btn btn-sm btn-outline-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteConfirmModal"
                                data-delete-modal
                                data-controller="Books"
                                data-action="Delete"
                                data-id="@item.Id"
                                data-text="Opravdu chcete smazat knihu „@item.Title“?">
                            Smazat
                        </button>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>


<!-- PAGINATION -->
<div class="mt-4">
    @await Html.PartialAsync("_PaginationPartial")
</div>

<!-- DELETE MODAL -->
@await Html.PartialAsync("_DeleteConfirmModal")

@section Scripts {
    <script src="~/js/delete-confirm-modal.js"></script>
}

