@model ReadingDiary.Web.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Přihlášení";
    ViewData["PageTitle"] = "Přihlášení";
    ViewData["PageDescription"] = "Přihlaste se ke svému čtenářskému deníku.";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">

        <!-- PAGE HEADER -->
        @await Html.PartialAsync("_PageHeaderPartial")

        <!-- CARD -->
        <div class="card shadow-sm">
            <div class="card-body">

                <form asp-action="Login" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Required for redirect back after successful login -->
                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" autofocus />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <button type="submit"
                            class="btn btn-primary w-100">
                        Přihlásit se
                    </button>

                    <a asp-action="Register"
                       asp-controller="Account"
                       asp-route-returnUrl="@ViewBag.ReturnUrl"
                       class="btn btn-outline-secondary w-100 mt-3">
                        Nemáte účet? Zaregistrujte se
                    </a>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
